## imports from other packages
import(RCurl, Biobase, methods, affy)
importFrom(RJSONIO, toJSON, fromJSON, emptyNamedList)
importFrom(tools, md5sum)
importFrom(digest, digest, hmac)
importFrom(utils, edit, compareVersion)

## package has a dynamic library
useDynLib(synapseClient)

## add'l commands defined in C-4
export(
  File,
  synGet,
  synStore,
  getFileLocation,
  submit,
  synRestGET,
  synRestDELETE,
  synRestPOST,
  synRestPUT,
  WikiPage,
  synGetWiki,
  synGetUserProfile,
  synGetSubmission,
  synGetSubmissionStatus,
  synGetEvaluation,
  synGetSubmissions,
  synGetOwnSubmissions,
  synGetParticipants,
  synGetWikiHeaders,
  synDelete,
  listObjects
)

export(onWeb)


## S3 utility methods
export(
  synapseResetEndpoints, 
  synapseAuthServiceEndpoint, 
  synapseRepoServiceEndpoint,
  synapseFileServiceEndpoint,
  synapsePortalEndpoint,
  synapseLogin, 
  synapseLogout,  
  synapseCacheDir,
  hmacSecretKey,
  setApiCredentials,
  synapseQuery,
  touOnWeb
)

## S3 convenience methods
export(synapseExecute)

## S4 entity constructors export methods starting with a capital letter. this is a hack.
exportPattern("^[A-Z]")

## entity S4 methods
exportMethods(
  storeEntityFiles,
  storeEntityObjects,
  storeEntity, 
  getEntity, 
  deleteEntity, 
  createEntity, 
  updateEntity, 
  downloadEntity, 
  loadEntity, 
  getParentEntity,
	getActivity,
	generatedBy,
	"generatedBy<-",
	"used",
	"used<-"
  )

## methods for managing layer files
exportMethods(
  addFile,
  deleteFile,
  moveFile
) 

exportMethods(
  addObject,
  deleteObject,
  getObject,
  renameObject
)

## entity property/annotation setters and getters
exportMethods(
  "annotValue<-",
  annotValue, 
  annotations, 
  "annotations<-",
  "annotationValues<-", 
  annotationValues,
  annotationNames
 )
 	
exportMethods(
  deleteProperty, 
  deleteAnnotation, 
  propertyValue, 
  "propertyValue<-", 
  "propertyValues<-", 
  propertyValues, 
  properties,
  propertyNames
)

